{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    // @see https://github.com/wmonk/create-react-app-typescript/issues/214
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "src"
    ]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}